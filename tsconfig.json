{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs", 
    "rootDir": "../", 
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "build",
    "noEmit": true, 
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
